@model Voyager.Models.Vm.AdminUserVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>AdminUserVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/AdminArea/AdminUser/Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                @Html.LabelFor(q => q.EMail, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.EMail, new { @class = "form-control" })
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Name, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Name, new { @class = "form-control" })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Surname, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Surname, new { @class = "form-control" })
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Password, new { @class = "bmd-label-floating" })
                @Html.PasswordFor(q => q.Password, new { @class = "form-control" })
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.ConfirmPassword, new { @class = "bmd-label-floating" })
                @Html.PasswordFor(q => q.ConfirmPassword, new { @class = "form-control" })
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                @Html.ValidationMessageFor(q => q.ConfirmPassword)
            </div>
            @*<div class="form-group">
                @Html.LabelFor(q => q.Roles, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Roles, new { @class = "form-control" })
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>*@
            @Html.HiddenFor(q => q.ID)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" href="~/AdminArea/AdminUser">Back to List</a>
</div>

