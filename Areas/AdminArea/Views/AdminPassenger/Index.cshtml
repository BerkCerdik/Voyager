
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

@using Voyager.Models.Vm
@model List<PassengerVM>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Passengers</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Name
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                View
                            </th>
                            <th>
                                Edit
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Surname
                                        </td>
                                        <td>
                                            @item.Password
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            <a href="/AdminPassenger/PassengerDetail/@item.ID">
                                                <button class="btn btn-outline-default btn-block">
                                                    Detail
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/AdminPassenger/Edit/@item.ID">
                                                <button class="btn btn-outline-warning">
                                                    Edit
                                                </button>
                                            </a>
                                        </td>
                                        @*delete*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>