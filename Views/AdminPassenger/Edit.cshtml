@model Voyager.Models.Vm.PassengerVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>PassengerVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                @Html.LabelFor(q => q.Email, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Email, new { @class = "form-control" })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Name, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Name, new { @class = "form-control" })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Surname, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Surname, new { @class = "form-control" })
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.Password, new { @class = "bmd-label-floating" })
                @Html.TextBoxFor(q => q.Password, new { @class = "form-control" })
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" href="~/AdminPassenger">Back to List</a>
</div>

