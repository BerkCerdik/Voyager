
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Voyager.Models.Vm.DriverVM>

<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header">
            <h4 class="card-title"> Driver Control Panel</h4>
            <a class="card-category" href="/AdminDriver/Add"> <button class="btn btn-primary btn-round">Add Driver</button></a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        View
                    </th>
                    <th>
                        Edit
                    </th>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Surname
                            </td>
                            <td>
                                @item.Password
                            </td>
                            <td>
                                @item.Email
                            </td>

                            <td>
                                <a href="./AdminDriver/Detail/@item.ID">
                                    <button class="btn btn-outline-default btn-block">
                                        Detail
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="./AdminDriver/Edit/@item.ID">
                                    <button class="btn btn-outline-warning btn-block">
                                        Edit
                                    </button>
                                </a>
                            </td>
                            @*delete*@
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>